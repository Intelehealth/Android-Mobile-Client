<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.jhu.bme.cbid.healthassistantsclient">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".IdentificationActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivePatientActivity"
            android:label="@string/title_activity_active_patient"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jhu.bme.cbid.healthassistantsclient.MainActivity" />
        </activity>
        <activity
            android:name=".PatientDetailActivity"
            android:label="@string/title_activity_patient_detail"
            android:parentActivityName=".ActivePatientActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jhu.bme.cbid.healthassistantsclient.ActivePatientActivity" />
        </activity>
        <activity
            android:name=".PatientSummaryActivity"
            android:label="@string/title_activity_patient_summary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ViewHistoryActivity" />
        <activity
            android:name=".GetPatientHistoryActivity"
            android:label="@string/title_activity_get_patient_history"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <service
            android:name=".IdService"
            android:exported="false"/>
    </application>

</manifest>
